<div class="container-fluid" style="background-image: url(./../../resources/img/placeholderLoginBackground.jpg); height: 100%; background-size: 100% 100%;">
    <div class="row my-5">{{> message}}</div>
    <div class="d-flex align-items-center justify-content-center">
        <div class="container rounded-3 p-5" style="background-color: rgba(245, 245, 245, 0.5); width: 50vw; height: 69vh;"> <!-- Box around contents -->
            <div class="row my-2 justify-content-md-center">
                <div class="col col-lg-4 text-center">
                    <h2>Register</h2>
                </div>
            </div>
            <div class="container">
                <div class="row my-3 justify-content-md-center">
                    <div class="col col-lg-4 text-center">
                        <form action="/register" method="POST">
                            <div class="form-group">
                                <label for="usernameInput">Username</label>
                                <input type="text" class="form-control" id="usernameInput" name="username">
                            </div>
                            <div class="form-group">
                                <label for="passwordInput">Password</label>
                                <input type="password" class="form-control" id="passwordInput" name="password">
                            </div>
                            <div class="my-3">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </form>
                        <p>Already have an account? <a href="/login">Login</a></p>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>